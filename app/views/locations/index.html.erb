<h1>Locations Menu</h1>

<div>
	<div>Create a new location for admin approval <%= link_to "click", new_location_path %>
	</div>
	<br>

	<% if @approved_locations.count != 0 %>
		<div>Add any of the following approved location(s) to your account.
			<ul>
				<% @approved_locations.each do |location| %>
				<li><%= location.name %> <%= link_to "Add location", add_to_my_location_path(location.id), :method => :post %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<br>
	<h3>My Locations</h3>
	<% current_user.locations.each do |location| %>
		<%= location.name %> <%= link_to "View Trips" %> <%= link_to "Delete", remove_from_my_location_path(location.id), :method => :post %>
		<br>
	<% end %>
</div>

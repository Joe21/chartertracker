<h1>Welcome to Charter Tracker <%= current_user.name %>!</h1>

<% if current_user.admin == true %>
	<h2>Admin Mode Activated!</h2>
	<div>
		There are currently <%= @all_users_count %> registered users.
		<br>
		There are currently <%= @pending_locations_count %> pending locations.
	</div>
<% end %>

<div id="home-menu">
	<%= link_to "Locations Menu", locations_path %>

	<%= link_to "Trips Menu" , trips_path %>

	<%= link_to "Tracker Menu", chart_path %>
</div>

<div id="leaderboards">
	<h3>Leaderboards</h3>
	<br>
	<% @topten.each do |user| %>
	Name: <%= user.name %>
	<br>
	Trips Contributed: <%= user.trips_counter %>
	<br>
	<hr>
	<% end %>
</div>
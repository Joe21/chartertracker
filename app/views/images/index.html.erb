<h3><%= current_user.image_counter %></h3>
<div>
	<% if current_user.images.count > 0 %>
		<% @images.each do |image| %>
			<%= image_tag image.data.to_s %><br />
			<%= link_to "edit", edit_image_path(image) %> |
			<%= link_to "remove", image, :method => :delete %>
		<% end %>
	<% else %>
		You have no images
	<% end %>
</div>

<%= link_to "Add Image", new_image_path %>